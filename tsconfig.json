{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "allowJs": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "typeRoots": [
      "../../types",
      "node_modules/@types",
      "lib/types"
    ]
  },
  "include": [
    "lib"
  ]
}
